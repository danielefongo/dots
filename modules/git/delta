  minus-emph-style              = reverse "{{ colors.red | stronger }}"
  minus-empty-line-marker-style = normal "{{ colors.red | darken }}"
  zero-style                    = syntax
  plus-style                    = italic bold "{{ colors.green | darken }}"
  plus-non-emph-style           = italic bold "{{ colors.green | darken }}"
  plus-emph-style               = reverse "{{ colors.green | stronger }}"
  plus-empty-line-marker-style  = normal "{{ colors.green | darken }}"
  grep-file-style               = "{{ colors.blue }}"
  grep-line-number-style        = "{{ colors.blue }}"
  whitespace-error-style        = reverse "{{ colors.magenta | stronger }}"
