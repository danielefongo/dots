# vim:ft=toml
live_config_reload = true

[colors.bright]
black = "{{ colors.grey4 }}"
blue = "{{ colors.light_blue }}"
cyan = "{{ colors.light_cyan }}"
green = "{{ colors.light_green }}"
magenta = "{{ colors.light_magenta }}"
red = "{{ colors.light_red }}"
white = "{{ colors.foreground }}"
yellow = "{{ colors.light_yellow }}"

[colors.normal]
black = "{{ colors.background }}"
blue = "{{ colors.blue }}"
cyan = "{{ colors.cyan }}"
green = "{{ colors.green }}"
magenta = "{{ colors.magenta }}"
red = "{{ colors.red }}"
white = "{{ colors.foreground }}"
yellow = "{{ colors.yellow }}"

[colors.primary]
background = "{{ colors.background }}"
foreground = "{{ colors.foreground }}"

[cursor.style]
blinking = "On"
shape = "Beam"

[env]
TERM = "xterm-256color"

[font]
size = {{ fontSize }}

[font.normal]
family = "{{ font }}"
style = "Regular"

[[keyboard.bindings]]
action = "Paste"
key = "P"
mods = "Alt"

[[keyboard.bindings]]
action = "Copy"
key = "Y"
mods = "Alt"

[shell]
args = ["-l", "-c", "tmux attach || tmux"]
program = "zsh"

[window]
decorations = "none"
startup_mode = "Windowed"
