# vars
set $mod Mod4
set $alt Mod1
set $ctrl Control
set $shift Shift
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"

# window interface
client.focused {{ colors.background }} {{ theme.primary }} {{ colors.background }} {{ theme.secondary }}
client.focused_inactive {{ colors.background_alt1 }} {{ colors.background_alt2 }} {{ theme.primary }} {{ theme.secondary }}
client.unfocused {{ colors.background_alt1 }} {{ colors.background_alt2 }} {{ colors.grey9 }} {{ colors.green }}
client.urgent {{ colors.background_alt1 }} {{ theme.error }} {{ colors.background }} {{ colors.green }}

hide_edge_borders none
for_window [class=".*"] border pixel {{ border }}
for_window [title="Screenshare"] floating enable
for_window [class="copyq"] floating enable, resize set 1000 600, move position center
for_window [title="Qalculate!"] floating enable, resize set 1000 600, move position center

# gaps
{% if not zen %}
gaps inner {{ gap }}px
gaps top {{ fontSize * 3 + gap }}px
gaps bottom 0px
smart_gaps off
{% endif %}

# miscellaneous
font pango:{{ font }} {{ fontSize }}
floating_modifier $mod

# autostart
exec --no-startup-id exec systemctl --user start --no-block x11-session.target
exec --no-startup-id exec systemctl --user start --no-block theme.service
exec --no-startup-id xss-lock -- i3-lock
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id nm-applet

# pulse audio
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# menu
bindsym $mod+d exec rofi -show combi
bindsym $mod+t exec rofi-theme
bindsym $mod+$shift+t exec nix-theme
bindsym $mod+o exec rofi-otp

# clipboard
bindsym $mod+v exec copyq toggle

# terminal
bindsym $mod+Return exec kitty

# kill window
bindsym $mod+q kill

# focus window
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move window
bindsym $mod+$shift+Left move left
bindsym $mod+$shift+Down move down
bindsym $mod+$shift+Up move up
bindsym $mod+$shift+Right move right

# resize
bindsym $mod+$ctrl+Left exec --no-startup-id i3-resize left
bindsym $mod+$ctrl+Down exec --no-startup-id i3-resize down
bindsym $mod+$ctrl+Up exec --no-startup-id i3-resize up
bindsym $mod+$ctrl+Right exec --no-startup-id i3-resize right

# focus parents
bindsym $mod+a focus parent
bindsym $mod+$shift+a focus child

# fullscreen
bindsym $mod+f fullscreen toggle

# split
bindsym $mod+slash split h
bindsym $mod+$shift+underscore split v

# layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+apostrophe layout toggle split

# floating
bindsym $mod+space floating toggle

# focus workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4

# move container to workspace
bindsym $mod+$shift+1 move container to workspace number $ws1
bindsym $mod+$shift+2 move container to workspace number $ws2
bindsym $mod+$shift+3 move container to workspace number $ws3
bindsym $mod+$shift+4 move container to workspace number $ws4

# move workspace
bindsym $mod+$shift+period move workspace to output next

# power
bindsym $mod+u exec rofi-power

# screenshots
bindsym Print exec flameshot gui
bindsym $shift+Print exec ocr

# notifications
bindsym $mod+$shift+k exec dunstctl set-paused toggle
