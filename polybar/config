# vim:ft=dosini

[bar/top]
monitor = ${env:MONITOR:}

radius = 10

width = 100%:-16
height = 30
fixed-center = true
offset-y = 8
offset-x = 8
override-redirect = true
wm-restack = i3
border-size = 0

tray-background = #1f2430
background = #1f2430
foreground = #d3d5db

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Hasklug Nerd Font:size=10
font-1 = FontAwesome:style=Regular
font-2 = Material Icons:style=Regular

modules-left = i3
modules-right = memory cpu battery temperature eth wlan date

tray-position = center
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #e9ebf0
label-mode-background = #6cbeff

label-focused = %index%
label-focused-foreground = #1f2430
label-focused-background = #ecc48d
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-foreground = #d3d5db
label-unfocused-background = #1f2430
label-unfocused-padding = 2

label-visible = %index%
label-visible-foreground = ${self.label-focused-foreground}
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %index%
label-urgent-foreground = #1f2430
label-urgent-background = #f45c7f
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = #d3d5db
format-underline = #9fd4ff
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "MEM "
format-prefix-foreground = #d3d5db
format-underline = #ecc48d
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = ${env:WLAN:}
interval = 3.0

format-connected = WLAN <label-connected>
format-connected-underline = #c792ea
label-connected = %essid%

format-disconnected = ""

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = #c792ea
format-connected-prefix-foreground = NaN
label-connected = ETH %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 1

date = "%Y-%m-%d"
time = %H:%M:%S

format-prefix-foreground = #d3d5db
format-underline = #f45c7f

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <label-charging>
format-charging-underline = #addb67

format-discharging = <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = "BAT "
format-full-prefix-foreground = #e9ebf0
format-full-underline = ${self.format-charging-underline}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-prefix = "TEMP "
format-underline = #f45c7f
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = #d3d5db

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
