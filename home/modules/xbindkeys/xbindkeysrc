"playerctl play-pause"
    XF86AudioPlay

"playerctl next"
    XF86AudioNext

"playerctl previous"
    XF86AudioPrev

"playerctl --player spotify play-pause"
    Shift + XF86AudioPlay

"playerctl --player spotify volume 0.05-"
    Shift + XF86AudioLowerVolume

"playerctl --player spotify volume 0.05+"
    Shift + XF86AudioRaiseVolume
