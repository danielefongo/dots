[module/temperature-ok]
type = custom/script
exec = cpu-temp -lt 75
interval = 3
label = %output%°C

format-prefix = " "
format-prefix-foreground = {{ theme.primary }}

[module/temperature-warn]
type = custom/script
exec = cpu-temp -ge 75
interval = 3
label = %output%°C

format-prefix = " "
format-prefix-foreground = {{ theme.error }}

[module/pulseaudio]
type = internal/pulseaudio
interval = 1
format-volume = "%{F{{ theme.primary }}}<ramp-volume>%{F-}  <label-volume>"
